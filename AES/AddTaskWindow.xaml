<Window x:Class="AES.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddTaskWindow" Height="200" Width="484" ResizeMode="NoResize">
    <Grid Background="#FFF1F4EB">
        <GroupBox Header="Add Task to Do" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" BorderThickness="2,2,2,2" Height="156" Width="308">
            <TextBox x:Name="txtBoxWorkTask" HorizontalAlignment="Left" Height="124" Margin="8,5,-2,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="290"/>
        </GroupBox>
        <Button x:Name="btnAddTask" Content="Add Task" HorizontalAlignment="Left" Margin="332,106,0,0" VerticalAlignment="Top" Width="97" Height="22" IsDefault="True" Click="btnAddTask_Click"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="332,140,0,0" VerticalAlignment="Top" Width="97" Height="22" IsCancel="True"/>

    </Grid>
</Window>
